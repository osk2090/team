  <select id="findByNo" resultMap="clubMap" parameterType="int">
    select
      c.no,
      c.arrive,
      c.title,
      c.content,
      c.theme,
      c.sdt,
      c.edt,
      c.total,
      m.no as writer_no,
      m.name as writer_name
    from club c
           inner join member m on m.no=c.no
    where c.no = #{value}
  </select>

  <update id="update" parameterType="club">
    update club
    set title   = #{ctitle},
        content = #{ccontent}
    where no = #{no}
  </update>

  <delete id="delete" parameterType="int">
    delete from club
    where no = #{value}
  </delete>

</mapper>







