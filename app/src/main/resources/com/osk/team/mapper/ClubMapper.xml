<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.osk.team.dao.ClubDao">

  <resultMap id="clubMap" type="club">
    <id column="cno" property="no"/>
    <result column="carrive" property="arrive"/>
    <result column="ctheme" property="theme"/>
    <result column="ctitle" property="title"/>
    <result column="ccontent" property="content"/>
    <result column="csdt" property="sdt"/>
    <result column="cedt" property="edt"/>
    <result column="ctotal" property="total"/>

    <association property="writer" javaType="member">
      <id column="writer_no" property="no"/>
      <result column="writer_name" property="name"/>
    </association>

  </resultMap>

  <!-- >클럽 게시판에 클럽 삽입<-->
   <insert id="insert" parameterType="club">
     insert into club(no, arrive, theme, title, content, sdt, edt)
     values (#{mno}, #{carrive}, #{ctheme}, #{ctitle}, #{ccontent}, #{csdt}, #{cedt})
  </insert>

  <select id="findByKeyword" resultMap="clubMap" parameterType="string">
    select
    c.no,
    c.arrive,
    c.title,
    c.content,
    c.theme,
    c.sdt,
    c.edt,
    c.total,
    m.no as writer_no,
    m.name as writer_name
    from club c
    inner join member m on m.no=c.no

    <if test="value != null">
      where
      c.arrive like concat('%', #{value},'%')
      and c.theme like concat('%', #{value},'%')
      and c.sdt like concat('%', #{value},'%')
      and c.edt like concat('%', #{value},'%')
    </if>
    order by c.no desc
  </select>

